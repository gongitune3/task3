<h1>Books</h1>
<table>
    <thead>
      <tr>
      <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to(book.user) do %>
            <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
          <% end %>
        </td>
        <td>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
        </td>
        <td>
            <%= book.body %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>