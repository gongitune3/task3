<h1>User info</h2>
<div class="profile-container">
    <h3 class="profile-name"><%= @user.name %></h3>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
    <p><%= @user.introduction %></p>
</div>

<%= link_to "//", edit_user_path(@user.id) %>

<%= form_for(@book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>
 
    <h4>Opinion</h4>
    <%= f.text_area :body %>
 
    <%= f.submit 'Create book' %>




<h1>Books</h1>
<table>
    <thead>
      <tr>
      <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to(book.user) do %>
            <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
          <% end %>
        </td>
        <td>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
        </td>
        <td>
            <%= book.body %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>