<h1>User info</h2>
<div class="profile-container">
    <h3><%= @book.user.name %></h3>
    <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
    <p><%= @book.user.introduction %></p>
</div>

<%= link_to "//", edit_user_path(current_user.id) %>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
  <h4><%= pluralize(@book.errors.count, "error") %>prohibited this book from being saved:</h4>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>



<%= form_for(@book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>
 
    <h4>Opinion</h4>
    <%= f.text_area :body %>
 
    <%= f.submit 'Create Book' %>
 
<% end %>

<%= flash[:notice] %>

<h1>Book detail</h1>

<table class="table table-hover">
    <tbody>
            <tr>
                <td>
                <%= link_to user_path(@user.id) do %>
                  <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
                  <%= @user.name %>
                <% end %>
                </td>
                <td>
                    <%= @book.title %>
                </td>
                <td>
                    <%= @book.body %>
                </td>
              <% if @book.user_id == current_user.id %>
                <td>
                  <%= link_to "Edit", edit_book_path(@book) %>
                </td>
                <td>
                  <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?" %>
                </td>
              <% end %>
            </tr>
    </tbody>
</table>