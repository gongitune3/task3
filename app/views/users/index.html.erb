<%= flash[:notice] %>

<div class='container'>                    
  <div class='row'>
    <div class='col-xs-3'>
      <h1>User info</h2>
      <div class="profile-container">
          
          <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
          <table class="table table-hover">
            <tr>
              <td>
                <p>name<p>
              </td>
              <td>
                <%= current_user.name %>
              </td>
            </tr>
            <tr>
              <td>
                <p>introduction</p>
              </td>
              <td>
                <%= current_user.introduction %>
              </td>
            </tr>
          </table>
      </div>

      <%= link_to " ", edit_user_path(current_user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>

      <% if @book.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
        <h4><%= pluralize(@book.errors.count, "error") %>prohibited this book from being saved:</h4>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
          <h2 class = "col-xs-12">New book</h2>
          <%= form_for(@book) do |f| %>
              <h4>Title</h4>
            <%= f.text_field :title, class:'col-xs-12' %>

            <h4>Opinion</h4>
            <%= f.text_area :body, class:'col-xs-12' %>

            <%= f.submit 'Create Book', class:'btn btn-primary col-xs-12' %>
          <% end %>
    </div>
      <div class='col-xs-9'>
      <h1>Users</h1>
      <table class="table table-hover">
          <thead>
            <tr>
            <th></th>
              <th>image</th>
              <th>name</th>
            </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                  <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size:'40x40' %>
              </td>
              <td>
                  <%= user.name %>
              </td>
              <td>
                  <%= link_to "Show", user_path(user.id) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>