<div class="profile-container">
    <h3 class="profile-name"><%= @user.name %></h3>
    <%= image_tag (style: "width: 100px; height: 100px; margin-top: 20px;") %>
</div>


<%= form_for(@book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>
 
    <h4>Opinion</h4>
    <%= f.text_area :body %>
 
    <%= f.submit 'Create book' %>
 
<% end %>

<% @books.each do |book| %>
      <tbody>
        <td>
            <%= book.title %>
        </td>
        <td>
            <%= book.body %>
        </td>
        <td>
            <%= link_to "Show", book_path(book.id) %>
        </td>
      </tbody>
    <% end %>
</table>